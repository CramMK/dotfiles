###############################################################################
[bar/laptop_top]
monitor = "eDP-1"
enable-ipc = false

font-0 = ${font.inconsolata}
font-1 = ${font.inconsolata_nerd}

bottom = false
fixed-center = true
width = 100%
height = 27

#padding-left = 0.5
padding-right = 2

foreground = ${colors.foreground}
