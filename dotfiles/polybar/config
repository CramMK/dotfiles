tray-position = none

#border-size = 5
#border-color = ${colors.background}

module-margin = 1

modules-left = i3tabs
modules-center =
modules-right = backlight volume date time battery powermenu
separator =

dim-value = 1.0


wm-name = i3
wm-restack = i3

#dpi-x = 96
#dpi-y = 96

###############################################################################
[bar/laptop_bottom]
